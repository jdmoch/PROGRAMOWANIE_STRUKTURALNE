TABLICA

void wypisz(unsigned int n, int * tab)
{
    int i;
for(i=0; i<n;i++)
{
    printf("%d\t",tab[i]);
}
printf("\n");
}

int main()
{
    printf("\n\n cw 4_2_0\n\n");
    int rozmiar=4;
    int tab[rozmiar];
    tab[0]=6; tab[1]=2; tab[2]=5; tab[3]=8;
    wypisz(rozmiar,tab);
    printf("%d\n",*tab);
    int tab2[]={9,5,7,3};
    wypisz(rozmiar,tab2);
    printf("%d\n",tab2[2]);
}

ZADANIE 1 ZEROWANIE i podwajanie i bezwzgledne

#include <stdio.h>
#include <stdlib.h>
void wypisz(unsigned int n, int * tab)
{
    int i;
for(i=0; i<n;i++)
{
    printf("%d\t",tab[i]);
}
printf("\n");
}

void zeruj(unsigned int n, int * tab)
{
int i;
for(i=0;i<n;i++)
{
    tab[i]*=2;
}
}

void podwajanie(unsigned int n, int * tab)
{
int i;
for(i=0;i<n;i++)
{
    tab[i] = i*2;
}
}

void bezwzgledne(unsigned int n, int * tab)
{
    int i;
    for(i = 0; i<n; i++)
    {
        tab[i] = abs(tab[i]);
    }
}

int main()
{
    int tab[] = {8,2,5,1,0,9};
    wypisz(6,tab);

    wypisz(6,tab);
    zeruj(6,tab);

    wypisz(6,tab);
    podwajanie(6,tab);

    bezwzgledne(6,tab);

}
